extends ../templates/template
include ../mixins/link
include ../mixins/services
include ../mixins/articles
include ../mixins/card
include ../mixins/cardReverse

block header
    if has_logo
        .nav-bar.container
            .logo-item
                img(src=`${patch}/${enlace}`, alt="")
    else
        .nav-bar.container
            .logo-item
                h1
                    a.logo(href="#")= logo_title
    if has_mobile_menu
        nav.main-nav 
            include ../includes/menu
            include ../includes/nav
    else
        include ../includes/nav

block carrousel
    if has_carrousel
        include ../components/carrousel
    else if has_bgPicture
        include ../components/picture
block services
    each s in services
        +service(s)
block articles
    each article in articles
        - let obj = Object.keys(article).map(x=>x%2);
        - let arr = Object.entries(obj);
        - arr.forEach(value => value[1] % 2 == 0 ?
            +card(article)
        - :
            +cardReverse(article)
        - );
block hero
    include ../includes/hero
block formContact 
    include ../includes/form
block footer
    include ../includes/footer
append js
    script(src='./js/app.min.js')

